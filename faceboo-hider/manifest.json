{
  "manifest_version": 3,
  "name": "Facebook Shit Hider",
  "version": "1.0",
  "description": "Automatically hides Facebook Reels and unwanted posts.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
